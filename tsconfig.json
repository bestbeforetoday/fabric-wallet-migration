{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "isolatedModules": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src/", "test/"]
}
